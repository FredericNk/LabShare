{
// Unter https://go.microsoft.com/fwlink/?LinkId=733558
// finden Sie Informationen zum Format von "tasks.json"
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "label": "Compile TSC",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
        },
        {
            "type": "shell",
            "command": "${workspaceFolder}/node_modules/.bin/tsc",
            "args": ["-b", "-w"],
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1
            },
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "Watch TSC",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true
        }
    ]
}
